<link href="/css/profile.css" rel="stylesheet">
<script src="/js/editprofile.js"></script>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="well well-sm">
                <div class="row">
                    <div class="col-md-4">
                        <img src="http://placehold.it/380x500" alt="" class="img-rounded img-responsive" />
                    </div>
                    <div class="col-md-8">
                      <form class="form-horizontal" role="form">
                        <div class="form-group">
                          <div class="col-md-9" id="name-div">
                            <p class="form-control-static" id="name">
                              
                            </p>
                          </div>
                          <div class="form-group" id="edit-btn-group" hidden>
                            <div class="col-md-3">
                              <p class="form-control-static">
                                <button class="btn btn-default" id="edit-btn"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                              </p>
                            </div>
                          </div>
                        </div>
                        <div class="form-group">
                            <label class="col-md-4 control-label"><i class="glyphicon glyphicon-globe"></i>Places lived:</label>
                            <div class="col-md-8" id="places-lived-div">
                            <p class="form-control-static" id="places-lived">
                              
                            </p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-4 control-label"><i class="glyphicon glyphicon-gift"></i>Birthday:</label>
                          <div class="col-md-8" id="dob-div">
                            <p class="form-control-static" id="dob">
                              
                            </p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-4 control-label"><i class="glyphicon glyphicon-bullhorn"></i>Languages:</label>
                          <div class="col-md-8" id="languages-div">
                            <p class="form-control-static" id="languages">
                              
                            </p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-4 control-label"><i class="glyphicon glyphicon-gift"></i>Gender:</label>
                          <div class="col-md-8" id="gender-div">
                            <p class="form-control-static" id="gender">
                              
                            </p>
                          </div>
                        </div>
                        <div class="form-group">
                          <label class="col-md-4 control-label"><i class="glyphicon glyphicon-envelope"></i>Email:</label>
                          <div class="col-md-8" id="email-div">
                            <p class="form-control-static" id="email">
                              
                            </p>
                          </div>
                        </div>
                      </form>
                    </div>
                </div>
                <div class="row">
                  <div class="col-md-8">
                      <form class="form-horizontal" role="form">
                        <div class="form-group">
                          <label class="col-md-12 control-label"><i class="glyphicon glyphicon-envelope"></i>About:</label>
                          <div class="col-md-12" id="about-div">
                            <p class="form-control-static" id="about">
                              
                            </p>
                          </div>
                        </div>
                      </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


