<script type="text/javascript" charset="utf-8" src="/libs/datatables/media/js/jquery.dataTables.js"></script>
<link rel="stylesheet" type="text/css" href="/libs/datatables/bootstrap.css">
<script type="text/javascript" charset="utf-8" src="/libs/datatables/bootstrap.js"></script>
<script src="/js/friends.js"></script>

<ul class="nav nav-tabs">
  <li class="active" id="friendsTab"><a href="#" style="outline:0;">Friends</a></li>
  <li id="requestsTab"><a href="#" style="outline:0;">Requests <span class="badge" id="numOfFriendReqs"></span></a></li>
  <li id="circlesTab"><a href="#" style="outline:0;">Circles</a></li>
</ul>

<div id="friends">
    <div id="add_friends">
        <h2>Add Friend</h2>

        <form id="addForm" class="form-inline">
            <input type="text" name="username" class="form-control" placeholder="Username">
            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    </div>

    <div id="current_friends">
        <h2>Current Friends</h2>
        <div class="container">
            <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered datatable" id="table_id">
                <thead>
                    <tr>
                        <th>Photo</th>
                        <th>Name</th>
                        <th>Friends since</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
        <ul id="friends_list"></ul>
    </div>
</div>

<div id="pending_friends">
    <h2>Friend Requests</h2>
    <ul id="requests_list"></ul>
</div>

<div id="circles">
    <h2>New Circle</h2>
    <form id="newCircle" class="form-inline">
        <input type="text" class="form-control" placeholder="Circle Name">
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
    <h2>Add to Circles</h2>
    <form id="addToCircle" class="form-inline">
        <select class="form-control" id="selectCircles"></select>
        <input type="text" class="form-control" placeholder="Username">
        <button type="submit" class="btn btn-primary">Add</button>
    </form>
    <h2>Circles</h2>
    <ul id="circles_list"></ul>
</div>
